{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "/usr/bin/g++-13",
            "args": [
                "-std=c++2b",
                "-fdiagnostics-color=always",
                "-g",
                "${fileDirname}/*.cpp",
                "${fileDirname}/indexer/*.cpp",
                "${fileDirname}/loader/*.cpp",
                "${fileDirname}/search/*.cpp",
                "${fileDirname}/text/*.cpp",
                "-o",
                "${fileDirname}/../release/program"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}